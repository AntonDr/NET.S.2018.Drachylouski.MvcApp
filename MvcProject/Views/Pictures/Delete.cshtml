
@{
    ViewBag.Title = "Delete";
}

<h2>DeleteImages</h2>
@using (Html.BeginForm("Delete", "Pictures", FormMethod.Post))
{
    <table style="background-color:azure" border="1">
        <thead style="background-color:gray">
            <tr>
                <th>Select</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @Html.EditorForModel()
        </tbody>
    </table>
    <input type="submit" value="Delete Selected Images" />
    <p> @Html.ActionLink("Go Back", "Index", "Pictures")</p>
}